<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/item_partner_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:maxLength="17"
        android:text="精选话题"
        android:textColor="@color/hint_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_partner_mess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_text_right"
        android:text="更多"
        android:textColor="@color/red"
        android:textSize="17sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/item_text_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/right" />


    <ImageView
        android:id="@+id/item_partner_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_partner_describe"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:src="@drawable/partner_photo" />


    <ListView
        android:id="@+id/item_partner_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/item_partner_img"
        android:background="#fcc"/>
</RelativeLayout>
