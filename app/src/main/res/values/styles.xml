<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <!--<item name="android:windowBackground">@color/gray_button_background</item>-->
    <!--</style>-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">#4876FF</item>
        <item name="colorPrimaryDark">#3A5FCD</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/gray_button</item> <!--浮动上去后的颜色-->
        <item name="colorControlHighlight">@color/green_price</item>
        <item name="colorAccent">@color/colorAccent</item>u
        <item name="android:textColorHint">@color/colorAccent</item>  <!--提示的颜色-->
        <item name="android:textColorPrimary">@color/red</item>  <!--输入的文字的颜色-->
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView"></style>

    <!--这里也可以设置textInput 框框的颜色-->
    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.WithoutActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--标题栏样式-->
    <style name="TitleBar">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <!--标题栏字体样式-->
    <style name="TitleBarText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--星期单选框样式-->
    <style name="WeekCheckbox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!--底部导航样式-->
    <style name="footbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
    </style>

    <style name="main_footbar_radio" parent="footbar">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">@drawable/footer_text_color</item>
    </style>

    <!--顶部title样式-->
    <!--<style name="title_base_button">-->
        <!--<item name="android:layout_width">48dp</item>-->
        <!--<item name="android:layout_height">match_parent</item>-->
        <!--<item name="android:textSize">14.0sp</item>-->
        <!--<item name="android:textColor">#ffffff</item>-->
    <!--</style>-->

    <style name="main_head_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19.0sp</item>
        <item name="android:textColor">#0e5986</item>
        <item name="android:shadowColor">#ffffffff</item>
    </style>

    <!-- 内容1样式 -->
    <style name="txt_ContextStyle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- 图片样式 -->
    <style name="img_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="TxtTitle" parent="@style/img_Style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">6.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:focusable">false</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CommonListViewStyle">
        <item name="android:divider">@drawable/list_view_divider</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:scrollingCache">true</item>
        <item name="android:smoothScrollbar">true</item>
    </style>

   <!-- <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

</resources>
